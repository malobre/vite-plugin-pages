{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@malobre/vite-plugin-pages",
  "version": "0.2.0",
  "author": "Maël Obréjan <mael.obrejan@protonmail.com>",
  "description": "Automatically look for inputs in `src/pages`",
  "keywords": [
    "vite-plugin"
  ],
  "license": "MIT",
  "type": "module",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist/**/*"
  ],
  "scripts": {
    "tidy": "biome check --write",
    "check": "tsc",
    "test": "vitest run",
    "prepare": "tsup src/index.ts --format=esm --dts --clean --sourcemap"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@types/node": "^24.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "vite": "^6.0.0"
  }
}
